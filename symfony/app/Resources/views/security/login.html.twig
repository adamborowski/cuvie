{% extends 'AppBundle::base.html.twig' %}

{% block body %}

    <div class="container" style="width:500px">
        <h3>Logowanie</h3>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Błąd:</span>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form class="form-horizontal" action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label for="username" class="col-sm-2 control-label">Użytkownik</label>

                <div class="col-sm-10">
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-2 control-label">Hasło</label>

                <div class="col-sm-10">
                    <input type="password" class="form-control" id="password" name="_password"/>
                </div>
            </div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Zaloguj</button>
                </div>
            </div>
        </form>
    </div>

{% endblock %}
